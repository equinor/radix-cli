  "version": "0.2.0",
  "configurations": [
    {
      "name": "Lauch radix-cli list applications",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/main.go",
      "env": {},
      "args": ["list", "applications"]
    },
    {
      "name": "Lauch radix-cli build deploy application",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/main.go",
      "args": [
        "--from-config",
        "--cluster",
        "weekly-47",
        "--api-environment",
        "qa",
        "build-deploy",
        "-b",
        "master"
      ]
    },
    {
      "name": "Lauch radix-cli set environment secret",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/main.go",
      "env": {
        "APP_SERVICE_ACCOUNT_TOKEN": "token"
      },
      "args": [
        "--token-environment",
        "--from-config",
        "set",
        "environment-secret",
        "--context",
        "playground",
        "-b",
        "master",
        "--component",
        "api",
        "-s",
        "APPINSIGHTS_INSTRUMENTATIONKEY",
        "-v",
        "iknu-test"
      ]
    },
    {
      "name": "Lauch radix-cli follow component",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/main.go",
      "env": {
        "APP_SERVICE_ACCOUNT_TOKEN": "token"
      },
      "args": [
        "--token-environment",
        "follow",
        "component",
        "--application",
        "radix-api",
        "--context",
        "playground",
        "-e",
        "prod",
        "--component",
        "server"
      ]
    }
  ]
}
